@model List<Atos.Models.MeetingRoomHelper>

@{
    ViewBag.Title = "Переговорные комнаты";
}

<div class="formRoomList">
    <div class="col-xs-12 col-sm-11 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
        <div class="roomList">
            @foreach (var room in Model)
            {
                <div class="MeetingRoom">
                    <div class="infoRoom">
                        @Html.ActionLink(room.NameRoom, "OpenRoom", "Employee", new { id = room.Id}, null)
                        <p>@room.NumberOfSeats мест</p>
                        <div class="timeImg">
                            <img src="~/Content/clock.jpg">
                        </div>
                        <div class="timeInfo">
                            @if (room.StartFirstEvent != DateTime.MinValue)
                            {
                                if (room.StartFirstEvent.ToShortDateString() == room.StopFirstEvent.ToShortDateString())
                                {
                                    <p>Время: @room.StartFirstEvent.ToShortTimeString() - @room.StopFirstEvent.ToShortTimeString()</p>
                                }
                                else
                                {
                                    <p>Время: <b>@room.StartFirstEvent.ToShortTimeString()</b> @room.StartFirstEvent.ToShortDateString() - 
                                        <b>@room.StopFirstEvent.ToShortTimeString()</b> @room.StopFirstEvent.ToShortDateString()</p>
                                }
                            }
                            else
                            {
                                <p>Аудитория свободна</p>
                            }
                        </div>
                    </div>
                    <div class="imgRoom">
                        <div class="img">
                            @if (room.Projector)
                            {
                                <img src="~/Content/projector.jpg">

                            }
                        </div>
                        <div class="img">
                            @if (room.MarkerBoard)
                            {
                                <img src="~/Content/markerBoard.jpg">

                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

